<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="10dip"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_RSA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testRSA"
                android:text="RSA"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_DES"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testDES"
                android:text="DES"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_DES3"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testDES3"
                android:text="DES3"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_SHA"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testSHA"
                android:text="SHA"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_AES"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testAES"
                android:text="AES"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_XOR"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testXOR"
                android:text="XOR"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_HMAC"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testHMAC"
                android:text="HMAC"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>